<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.history.mapper.PlaceNameMapper">

    <resultMap id="BaseResultMap" type="com.history.model.entity.PlaceName">
        <id column="id" property="id"/>
        <result column="ancient_name" property="ancientName"/>
        <result column="modern_name" property="modernName"/>
        <result column="modern_location" property="modernLocation"/>
        <result column="description" property="description"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM place_name ORDER BY id ASC
    </select>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM place_name WHERE id = #{id}
    </select>

    <select id="selectByAncientName" resultMap="BaseResultMap">
        SELECT * FROM place_name 
        WHERE ancient_name LIKE CONCAT('%', #{ancientName}, '%')
        ORDER BY id ASC
    </select>

    <select id="selectByModernName" resultMap="BaseResultMap">
        SELECT * FROM place_name 
        WHERE modern_name LIKE CONCAT('%', #{modernName}, '%')
        ORDER BY id ASC
    </select>

    <select id="search" resultMap="BaseResultMap">
        SELECT * FROM place_name 
        WHERE ancient_name LIKE CONCAT('%', #{keyword}, '%')
           OR modern_name LIKE CONCAT('%', #{keyword}, '%')
           OR modern_location LIKE CONCAT('%', #{keyword}, '%')
        ORDER BY id ASC
    </select>

    <select id="selectPage" resultMap="BaseResultMap">
        SELECT * FROM place_name 
        ORDER BY id ASC
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <select id="count" resultType="long">
        SELECT COUNT(*) FROM place_name
    </select>

</mapper>
